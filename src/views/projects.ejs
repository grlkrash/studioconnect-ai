<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Projects – StudioConnect AI</title>
  <link rel="stylesheet" href="/static/css/ui.css" />
</head>
<body class="bg-gray-50 font-sans text-gray-900 min-h-screen">
  <nav class="bg-brand text-white py-3 px-4 flex justify-between items-center">
    <a href="/admin/dashboard" class="font-semibold">StudioConnect&nbsp;AI</a>
    <div class="flex gap-6 text-sm">
      <a href="/admin/dashboard" class="hover:underline">Dashboard</a>
      <a href="/admin/projects" class="underline font-medium">Projects</a>
      <a href="/api/admin/logout" class="hover:underline">Logout</a>
    </div>
  </nav>

  <main class="container mx-auto max-w-6xl px-6 py-10">
    <h1 class="text-2xl font-bold mb-6">Projects</h1>

    <% if (projects && projects.length > 0) { %>
      <div class="overflow-x-auto bg-white shadow-sm rounded-xl">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700">Client</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700">Last&nbsp;Sync</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% projects.forEach(p => { %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap"><%= p.name %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= p.client ? p.client.name : '—' %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= p.status %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= p.lastSyncedAt ? new Date(p.lastSyncedAt).toLocaleString() : 'Never' %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-gray-600">No projects found.</p>
    <% } %>
  </main>
</body>
</html> 