<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Clients â€“ StudioConnect AI' }) %>
<body class="bg-gray-100 min-h-screen">
    <%- include('partials/header') %>
    
    <main class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold tracking-tight">Clients</h1>
            <button id="addClientBtn" class="btn-primary">Add Client</button>
        </div>

        <% if (successMessage) { %>
            <div class="alert alert-success mb-4">
                <%= successMessage %>
            </div>
        <% } %>

        <div class="card overflow-x-auto">
            <table class="table divide-y divide-gray-200">
                <thead class="table-head">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Projects</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% clients.forEach(client => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap"><%= client.name %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= client.email %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= client.phone %></td>
                            <td class="px-6 py-4 whitespace-nowrap"><%= client.projects.length %></td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                <button class="btn-secondary">Edit</button>
                                <button class="btn-secondary border-red-300 text-red-600 hover:bg-red-50">Delete</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('partials/footer') %>
    <script src="/static/js/clients.js"></script>
</body>
</html> 