<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - StudioConnect AI</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Projects</h1>
            <button id="addProjectBtn" class="btn-primary">Create New Project</button>
        </div>

        <% if (successMessage) { %>
            <div class="alert alert-success mb-4">
                <%= successMessage %>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% projects.forEach(project => { %>
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-start mb-4">
                        <h2 class="text-xl font-semibold"><%= project.name %></h2>
                        <span class="px-2 py-1 text-xs rounded-full <%= project.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                            <%= project.status %>
                        </span>
                    </div>
                    
                    <div class="mb-4">
                        <p class="text-gray-600 mb-2">Client: <%= project.client.name %></p>
                        <p class="text-gray-600">Tasks: <%= project.tasks.length %></p>
                    </div>

                    <div class="flex justify-between items-center">
                        <div class="text-sm text-gray-500">
                            Created: <%= new Date(project.createdAt).toLocaleDateString() %>
                        </div>
                        <div class="space-x-2">
                            <button class="text-indigo-600 hover:text-indigo-900">Edit</button>
                            <button class="text-red-600 hover:text-red-900">Delete</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('partials/footer') %>
    <script src="/static/js/projects.js"></script>
</body>
</html> 